<style>
  h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .main-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-card {
    background: var(--bg-card);
    border: 2px solid var(--border-color);
    border-radius: 16px;
    padding: 2.5rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    position: relative;
  }

  .main-card:hover {
    transform: translateY(-8px);
    border-color: var(--accent-primary);
    box-shadow: 0 12px 32px rgba(108, 99, 255, 0.2);
  }

  .main-card.featured {
    border-color: var(--accent-primary);
    background: linear-gradient(135deg, rgba(108, 99, 255, 0.05), rgba(139, 132, 255, 0.05));
  }

  .main-card.info-card {
    cursor: default;
  }

  .main-card.info-card:hover {
    transform: none;
  }

  .card-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--accent-primary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .main-card h3 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .main-card p {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .card-link {
    color: var(--accent-primary);
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .main-card:hover .card-link {
    color: var(--accent-secondary);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .stat-card {
    text-align: center;
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 12px;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cta-card {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: 3rem;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 1.75rem;
    }

    .main-grid {
      grid-template-columns: 1fr;
    }

    .main-card {
      padding: 2rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
