---
import '../styles/global.css';

interface Props {
  frontmatter: {
    title: string;
    phase: string;
    week: number;
  };
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={frontmatter.title}>
  <title>{frontmatter.title} | Rose Trading</title>
</head>
<body>
  <header>
    <nav class="container">
      <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem 0;">
        <a href="/" style="font-size: 1.5rem; font-weight: 700; color: var(--text-primary);">
          funsized rose
        </a>
        <div style="display: flex; gap: 2rem;">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/course">Course</a>
          <a href="/curriculum">Curriculum</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <!-- Breadcrumb -->
    <div class="container" style="padding-top: 2rem;">
      <div class="breadcrumb">
        <a href="/course">← Back to Course</a>
        <span style="color: var(--text-secondary); margin: 0 0.5rem;">•</span>
        <span style="color: var(--text-secondary);">{frontmatter.phase}</span>
      </div>
    </div>

    <!-- Week Header -->
    <section class="week-header">
      <div class="container">
        <div class="week-badge">Week {frontmatter.week}</div>
        <h1>{frontmatter.title}</h1>
        <p class="phase-label">{frontmatter.phase}</p>
      </div>
    </section>

    <!-- Content -->
    <section class="content-section">
      <div class="container">
        <article class="lesson-content">
          <slot />
        </article>
      </div>
    </section>
  </main>

  <footer style="background: var(--bg-secondary); padding: 3rem 0; margin-top: 4rem;">
    <div class="container">
      <p style="text-align: center; color: var(--text-secondary);">
        © 2026 Rose Trading. Start your journey.
      </p>
    </div>
  </footer>
</body>
</html>

<style>
  .breadcrumb {
    display: flex;
    align-items: center;
    font-size: 0.95rem;
  }

  .breadcrumb a {
    color: var(--accent-primary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--accent-secondary);
  }

  .week-header {
    padding: 3rem 0 2rem;
    text-align: center;
  }

  .week-badge {
    display: inline-block;
    background: var(--accent-primary);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 25px;
    font-weight: 700;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .week-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .phase-label {
    color: var(--text-secondary);
    font-size: 1.125rem;
  }

  .content-section {
    padding: 2rem 0 4rem;
  }

  .lesson-content {
    max-width: 800px;
    margin: 0 auto;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 3rem;
  }

  .lesson-content :global(h1) {
    color: var(--accent-primary);
    font-size: 2rem;
    margin-bottom: 2rem;
    margin-top: 0;
  }

  .lesson-content :global(h2) {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .lesson-content :global(h3) {
    color: var(--accent-primary);
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .lesson-content :global(p) {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.0625rem;
  }

  .lesson-content :global(ul) {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .lesson-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .lesson-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .lesson-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .lesson-content :global(code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: monospace;
    color: var(--accent-secondary);
  }

  .lesson-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 3rem 0;
  }

  @media (max-width: 768px) {
    .week-header h1 {
      font-size: 2rem;
    }

    .lesson-content {
      padding: 2rem 1.5rem;
    }
  }
</style>
