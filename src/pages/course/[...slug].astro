---
import { getCollection } from 'astro:content';
import CourseLayout from '../../layouts/CourseLayout.astro';

export async function getStaticPaths() {
  const courseEntries = await getCollection('course');
  
  // Sort by week number
  const sortedEntries = courseEntries.sort((a, b) => a.data.week - b.data.week);

  return sortedEntries.map((entry, index) => {
    const prevWeek = index > 0 ? sortedEntries[index - 1] : null;
    const nextWeek = index < sortedEntries.length - 1 ? sortedEntries[index + 1] : null;

    return {
      params: { slug: entry.slug },
      props: { 
        entry,
        prevWeek,
        nextWeek
      },
    };
  });
}

const { entry, prevWeek, nextWeek } = Astro.props;

if (!entry) {
  throw new Error('Course entry not found!');
}

const { Content } = await entry.render();

// Hardcoded quiz data for each week (temporary solution to ensure quizzes work)
const quizData = {
  1: {
    question: 'In the "Spring" analogy, what does an Inside Bar represent?',
    options: ['1. Kinetic Energy (The explosion)', '2. Potential Energy (The compression)', '3. A market crash'],
    correct: 2
  },
  2: {
    question: 'If the Monthly Candle is Green and the Ribbon is Green, but you see a Bearish setup on the 5-minute chart, what do you do?',
    options: ['1. Take the short trade quickly.', '2. Ignore the short trade; it is fighting the trend.', '3. Flip a coin.'],
    correct: 2
  },
  3: {
    question: 'A stock has been falling for 3 days. Suddenly, a Green candle breaks the High of the previous Red candle. What signal is this?',
    options: ['1. A Continuation (2-1-2)', '2. A Reversal (2-2)', '3. An Inside Bar (1)'],
    correct: 2
  },
  4: {
    question: 'If you SELL an option, who is "Theta" working for?',
    options: ['1. The Buyer (The Gambler)', '2. You (The Casino)', '3. The Broker'],
    correct: 2
  },
  5: {
    question: 'If you sell an option with a 20 Delta, what is your theoretical probability of winning (keeping the full premium)?',
    options: ['1. 20%', '2. 50%', '3. 80%'],
    correct: 3
  },
  6: {
    question: 'To sell a "Cash Secured Put," what does your broker require you to have?',
    options: ['1. 100 shares of the stock.', '2. Enough cash to buy 100 shares at the strike price.', '3. A margin loan.'],
    correct: 2
  },
  7: {
    question: 'The chart looks perfect, but the IV Rank is 5 (very low premiums). Do you take the trade?',
    options: ['1. Yes, the chart is king.', '2. No, the premium is too cheap; the risk/reward isn\'t there.'],
    correct: 2
  },
  8: {
    question: 'Why do we buy the "Protection" leg in a Credit Spread?',
    options: ['1. To make more profit.', '2. To cap our maximum loss (Defined Risk).', '3. Because the broker forces us to.'],
    correct: 2
  },
  9: {
    question: 'You sold a spread for $1.00 credit. It is now trading at $0.50. What do you do?',
    options: ['1. Hold it until it goes to $0.00.', '2. Buy to Close (BTC) immediately to lock in the win.', '3. Roll the trade.'],
    correct: 2
  },
  10: {
    question: 'You have a $20,000 account. What is the absolute maximum capital you should allocate to a single trade setup (5% rule)?',
    options: ['1. $5,000', '2. $1,000', '3. $10,000'],
    correct: 2
  },
  11: {
    question: 'You just took a max loss on a trade. You feel angry and want to open a new trade immediately to recover the loss. What is this called?',
    options: ['1. Hedging', '2. Revenge Trading', '3. Alpha Generation'],
    correct: 2
  },
  12: {
    question: 'This is the final assessment - you completed the course!',
    options: ['1. I understand the fundamentals', '2. I\'m ready to practice', '3. Both of the above'],
    correct: 3
  }
};

const weekNumber = entry.data.week;
const quiz = quizData[weekNumber] || null;
---

<CourseLayout frontmatter={entry.data}>
  <Content />
  
  {quiz && (
    <div class="quiz-section">
      <h3 class="quiz-title">üìù Week {entry.data.week} Assessment</h3>
      <p class="quiz-question"><strong>Question:</strong> {quiz.question}</p>
      
      <div class="quiz-options">
        {quiz.options.map((option, index) => (
          <button 
            class="quiz-option" 
            data-option={index + 1}
            data-correct={quiz.correct}
          >
            {option}
          </button>
        ))}
      </div>
      
      <div class="quiz-feedback" id="quiz-feedback"></div>
    </div>
  )}

  <!-- Navigation -->
  <div class="lesson-navigation">
    {prevWeek ? (
      <a href={`/course/${prevWeek.slug}`} class="nav-btn prev-btn">
        <span class="nav-arrow">‚Üê</span>
        <div>
          <div class="nav-label">Previous</div>
          <div class="nav-title">{prevWeek.data.title}</div>
        </div>
      </a>
    ) : (
      <div></div>
    )}
    
    {nextWeek ? (
      <a href={`/course/${nextWeek.slug}`} class="nav-btn next-btn">
        <div>
          <div class="nav-label">Next</div>
          <div class="nav-title">{nextWeek.data.title}</div>
        </div>
        <span class="nav-arrow">‚Üí</span>
      </a>
    ) : (
      <a href="/course" class="nav-btn next-btn">
        <div>
          <div class="nav-label">Complete</div>
          <div class="nav-title">Back to Course</div>
        </div>
        <span class="nav-arrow">‚Üí</span>
      </a>
    )}
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const options = document.querySelectorAll('.quiz-option');
      const feedback = document.getElementById('quiz-feedback');
      
      if (!options.length) return;
      
      options.forEach(option => {
        option.addEventListener('click', function() {
          const selected = parseInt(this.dataset.option);
          const correct = parseInt(this.dataset.correct);
          
          // Remove previous states
          options.forEach(opt => {
            opt.classList.remove('selected', 'correct', 'incorrect');
            opt.disabled = false;
          });
          
          // Mark selected
          this.classList.add('selected');
          
          // Check answer
          if (selected === correct) {
            this.classList.add('correct');
            if (feedback) {
              feedback.innerHTML = '<div class="feedback-correct">‚úì Correct! Great job!</div>';
            }
          } else {
            this.classList.add('incorrect');
            // Show correct answer
            options.forEach(opt => {
              if (parseInt(opt.dataset.option) === correct) {
                opt.classList.add('correct');
              }
            });
            if (feedback) {
              feedback.innerHTML = '<div class="feedback-incorrect">‚úó Incorrect. The correct answer is highlighted above.</div>';
            }
          }
          
          // Disable all options after answer
          options.forEach(opt => opt.disabled = true);
        });
      });
    });
  </script>

  <style>
    .quiz-section {
      margin-top: 4rem;
      padding-top: 3rem;
      border-top: 2px solid var(--border-color);
    }

    .quiz-title {
      color: var(--accent-primary);
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .quiz-question {
      font-size: 1.125rem;
      margin-bottom: 2rem;
      color: var(--text-primary);
    }

    .quiz-options {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .quiz-option {
      background: var(--bg-secondary);
      border: 2px solid var(--border-color);
      border-radius: 8px;
      padding: 1rem 1.5rem;
      color: var(--text-primary);
      text-align: left;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1rem;
    }

    .quiz-option:hover:not(:disabled) {
      border-color: var(--accent-primary);
      background: var(--bg-card);
      transform: translateX(8px);
    }

    .quiz-option.correct {
      background: rgba(34, 197, 94, 0.1);
      border-color: rgb(34, 197, 94);
      color: rgb(34, 197, 94);
      font-weight: 600;
    }

    .quiz-option.incorrect {
      background: rgba(239, 68, 68, 0.1);
      border-color: rgb(239, 68, 68);
      color: rgb(239, 68, 68);
    }

    .quiz-option:disabled {
      cursor: not-allowed;
      opacity: 0.9;
    }

    .quiz-feedback {
      min-height: 60px;
      margin-top: 1.5rem;
    }

    .feedback-correct {
      background: rgba(34, 197, 94, 0.1);
      border: 2px solid rgb(34, 197, 94);
      color: rgb(34, 197, 94);
      padding: 1rem;
      border-radius: 8px;
      font-weight: 600;
      text-align: center;
      font-size: 1.125rem;
    }

    .feedback-incorrect {
      background: rgba(239, 68, 68, 0.1);
      border: 2px solid rgb(239, 68, 68);
      color: rgb(239, 68, 68);
      padding: 1rem;
      border-radius: 8px;
      font-weight: 600;
      text-align: center;
      font-size: 1.125rem;
    }

    .lesson-navigation {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      margin-top: 4rem;
      padding-top: 3rem;
      border-top: 2px solid var(--border-color);
    }

    .nav-btn {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem;
      background: var(--bg-secondary);
      border: 2px solid var(--border-color);
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .nav-btn:hover {
      border-color: var(--accent-primary);
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(108, 99, 255, 0.2);
    }

    .prev-btn {
      justify-content: flex-start;
    }

    .next-btn {
      justify-content: flex-end;
      grid-column: 2;
    }

    .nav-arrow {
      font-size: 1.5rem;
      color: var(--accent-primary);
    }

    .nav-label {
      font-size: 0.875rem;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 0.25rem;
    }

    .nav-title {
      color: var(--text-primary);
      font-weight: 600;
      font-size: 1rem;
    }

    @media (max-width: 768px) {
      .lesson-navigation {
        grid-template-columns: 1fr;
      }

      .next-btn {
        grid-column: 1;
      }

      .quiz-option:hover:not(:disabled) {
        transform: translateX(4px);
      }
    }
  </style>
</CourseLayout>
